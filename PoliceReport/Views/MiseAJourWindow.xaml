<Window x:Class="PoliceReport.Views.MiseAJourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AutoUpdateApp" Height="250" Width="400">
    <Window.Background>
        <ImageBrush ImageSource="/Images/Background.png"/>
    </Window.Background>
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="White" Opacity="0.85"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">
            Bienvenue dans l'application !
        </TextBlock>
        <ProgressBar Name="progressBar" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="300" Height="20" Margin="0,20,0,0" Visibility="Collapsed"/>
    </Grid>
</Window>