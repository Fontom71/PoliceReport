<Window x:Class="PoliceReport.Views.MiseAJourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Mise à jour PoliceReport" Height="250" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="/Images/Background.png"/>
    </Window.Background>
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="White" Opacity="0.85"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Margin="0,0,0,150">
            Bienvenue dans l'application !
        </TextBlock>
        <ProgressBar Name="progressBar" VerticalAlignment="Bottom" Height="15" Margin="50,0,50,20"/>
        <Button Name="btnMiseAJour" Content="Mettre à Jour" VerticalAlignment="Center" Click="btnMiseAJour_Click" Margin="100,90,100,0" Height="30"/>
        <Label x:Name="nouvelleMajLbl" Content="Une nouvelle mise à jour est disponible !" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,0,70"/>
        <Label x:Name="versionLbl" Content="Version actuelle :" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>