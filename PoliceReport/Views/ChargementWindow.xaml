<Window x:Class="PoliceReport.Views.ChargementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chargement" Height="100" Width="300" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" Topmost="True">
    <Window.Background>
        <ImageBrush ImageSource="/Images/Background.png" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="White" Opacity="0.85"/>
        </Grid.Background>
        <Border BorderThickness="5,5,5,5" BorderBrush="Black">
            <Grid>
                <TextBlock Text="Chargement en cours..." HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,20" FontSize="16"/>
                <ProgressBar Name="progressBar" Height="20" Margin="50,40,50,0" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>