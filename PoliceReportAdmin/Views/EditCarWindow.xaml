<Window x:Class="PoliceReportAdmin.EditCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifier Voiture" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Marque:"/>
        <TextBox Grid.Row="0" Text="{Binding Marque, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

        <Label Grid.Row="1" Content="Modèle:"/>
        <TextBox Grid.Row="1" Text="{Binding Modele, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

        <Label Grid.Row="2" Content="Année:"/>
        <TextBox Grid.Row="2" Text="{Binding Annee, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

        <Button Grid.Row="4" Content="Enregistrer" Click="Enregistrer_Click" HorizontalAlignment="Center" Margin="5"/>
    </Grid>
</Window>
